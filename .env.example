# Database Configuration
# These settings tell your application how to connect to PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=auth_app

# JWT Configuration
# The secret must be at least 32 characters for security
# In production, use a long random string
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Server Configuration
SERVER_PORT=8080

# Development vs Production
# This affects logging levels and other behavior
ENVIRONMENT=development

# OpenTelemetry Configuration
# This is where your application sends trace data
# If running monitoring stack in Docker, use "jaeger:4318"
# If running app locally but monitoring in Docker, use "localhost:4318"
OTEL_ENDPOINT=localhost:4318

# Optional: Adjust log level
# Options: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Optional: Log format
# Options: json (for production/Loki) or text (for development)
LOG_FORMAT=json
